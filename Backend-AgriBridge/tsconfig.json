{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ES6"],
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["Backend-AgriBridge/*"]
    }
  },
  "include": [
    "**/*.ts",
    "Backend-AgriBridge/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../Frontend-AgriBridge"
  ]
}